/* pages/me/me.wxss */
.container {
    width: 100;
    height: 100;
}

.container .meHeader {
    display: flex;
    position: relative;
    width: 100%;
    height: 400rpx;
    justify-content: center;
    align-items: center;
}

.container .meHeader .meHeaderImage {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.container .meHeader .login {
    background-color: white;
    height: 80rpx;
    width: 200rpx;
    color: rgb(88, 189, 58);
    text-align: center;
    line-height: 80rpx;
    border-radius: 40rpx;
    font-size: 30rpx;
}

.container .items-wapper {
    margin-top: 30rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
}

.container .items-wapper .items-wapper-title {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.container .items-wapper .items-wapper-title .title{
    font-size: 40rpx;
    font-weight: bold;
}

.container .items-wapper .items-wapper-title .items-wapper-title-rightItem {
    font-size: 32rpx;
    display: flex;
    align-items: center;
    flex-direction: row;
    justify-content: space-between;
    color: #999999;
}

.container .items-wapper .arrow {
    width: 20rpx;
    height: 20rpx;
    border-right: 4rpx solid #999999;
    border-bottom: 4rpx solid #999999;
    transform: rotate(-45deg);
    margin-left: 10rpx;
}